---
interface Props {
  id: string;
  title: string;
  message: string;
}
const { id, title, message } = Astro.props;
---

<dialog id={id} class="modal modal-bottom sm:modal-middle shadow-lg bg-transparent">
  <div class="modal-box bg-secondary border-base-300 text-secondary-content">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost shadow-md absolute right-2 top-2">âœ•</button>
    </form>
    <h3 class="text-lg font-bold">{title}</h3>
    <p class="py-4" set:html={message}></p>
    <div class="modal-action">
      <form method="dialog">
        <div class="flex flex-col flex-col-reverse lg:flex-row justify-end">
          <button class="action-btn btn btn-ghost">Cancel</button>
          <button class="action-btn btn btn-primary">OK</button>
        </div>
      </form>
    </div>
  </div>
</dialog>

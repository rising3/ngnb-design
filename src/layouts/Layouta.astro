---
import "../assets/app.css";
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";

const HEADER_BASE_COLOR = "bg-primary text-primary-content";
const SIDEBAR_BASE_COLOR = "bg-neutral text-neutral-content";
const SIDEBAR_BASE_BG_COLOR = "bg-neutral/50 text-neutral-content";
const CONTENT_BASE_COLOR = "bg-base-200 text-base-content";
---

<!doctype html>
<html lang="en">
  <head>
    <script is:inline>
      if (localStorage.getItem("theme") === null) {
        document.documentElement.setAttribute("data-theme", "light");
      } else {
        document.documentElement.setAttribute("data-theme", localStorage.getItem("theme"));
      }
    </script>
    <script>
      import { themeChange } from "theme-change";
      themeChange();
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>NGNB Web Design</title>
  </head>
  <body>
    <!-- Header -->
    <Header color={HEADER_BASE_COLOR} />
    <!-- Header -->
    <!-- Body -->
    <div class:list={['drawer drawer-mobile lg:drawer-open', CONTENT_BASE_COLOR]}>
		<slot />
		<!-- Sidebar -->
		<Sidebar color={SIDEBAR_BASE_COLOR} bgColor={SIDEBAR_BASE_BG_COLOR} />
		<!-- Sidebar -->
    </div>
    <!-- Body -->
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
